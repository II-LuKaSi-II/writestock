<body style="background-color: white;">
  <div id="showContainer">
   <div class="articleHead">
    <div style="margin-bottom: 5px;">
        <div id="articleType"> <%= article.articleType %>  </div>
        <h1 id="articleTitle"><%= article.title %></h1>
        <div style="margin-bottom: 0rem;" id="tickerTagsLine">
          <div class="tickerline">
            <% if(article.articleTicker) { %> 
              <div class="hiddenDiv">
                <a  href="ticker/<%= article.articleTicker %>" class=" tickersbtn btn-primary tags"> <%= article.articleTicker %> </a>
              </div>
              <% } %> 
              <% if(article.articleTickerTwo) { %> 
              <div class="hiddenDiv">
                <a  href="ticker/<%= article.articleTickerTwo %>" class=" tickersbtn btn-primary tags"> <%= article.articleTickerTwo %> </a>
              </div>
              <% } %> 
              <% if(article.articleTickerThree) { %> 
              <div class="hiddenDiv">
                <a  href="ticker/<%= article.articleTickerThree %>" class=" tickersbtn btn-primary tags"> <%= article.articleTickerThree %> </a>
              </div>
              <% } %> 
              <% if(article.articleTickerFour) { %> 
              <div class="hiddenDiv">
                <a  href="ticker/<%= article.articleTickerFour %>" class=" tickersbtn btn-primary tags"> <%= article.articleTickerFour %> </a>
              </div>
              <% } %> 
              <% if(article.articleTickerFive) { %> 
              <div class="hiddenDiv">
                <a  href="ticker/<%= article.articleTickerFive %>" class=" tickersbtn btn-primary tags"> <%= article.articleTickerFive %> </a>
              </div>
              <% } %> 
          </div>
          <div class="tagsline">
            <% if(article.articleTag) { %> 
              <div>
                <a  style="border: white 2px solid; " href="tags/<%= article.articleTag %>" class="  btn-primary tags"> <%= article.articleTag %> </a>
              </div>
              <% } %> 
              <% if(article.articleTagTwo) { %> 
              <div>
                <a  style="border: white 2px solid; " href="tags/<%= article.articleTagTwo %>" class="  btn-primary tags"> <%= article.articleTagTwo %> </a>
              </div>
              <% } %>     
              <% if(article.articleTagThree) { %> 
              <div>
                <a  style="border: white 2px solid; " href="tags/<%= article.articleTagThree %>" class="  btn-primary tags"> <%= article.articleTagThree %> </a>
              </div>
              <% } %>    
              <% if(article.articleTagFour) { %> 
              <div>
                <a  style="border: white 2px solid; " href="tags/<%= article.articleTagFour %>" class="  btn-primary tags"> <%= article.articleTagFour %> </a>
              </div>
              <% } %>        
              <% if(article.articleTagFive) { %> 
              <div>
                <a  style="border: white 2px solid; " href="/<%= article.articleTagFive %>" class="  btn-primary tags"> <%= article.articleTagFive %> </a>
              </div>
              <% } %> 
          </div>
          <div class="mt-3 mb-2">
            <% if(article.articleTicker) { %> 
              <div class="hiddenDiv">
                <h5> 
                  Price: $<%= article.pricewritten %> (
                  <% if(priceChange > 0) { %> 
                    <span style='color: green'> &#x25B2; <%= priceChange %>%  </span>
                  <% } %> 
                  <% if(priceChange < 0) { %> 
                    <span style='color: red'> &#x25B2; <%= priceChange %>%  </span>
                    <% } %> 
                  )
                </h5>
              </div>
            <% } %> 
          </div>
        </div>
    </div>
    <div id="logoContainer">
      <img id="logoPicHeader" src="<%= article.logopicture %>" alt="Girl in a jacket">
    </div>
    </div>
    <div style="display: flex; flex-direction: row;"> 
      <div>
        <img src="https://imgur.com/IzGGPdO.jpg" height="35px" width="auto" alt="">
      </div>
      <div id="authorName" class="ml-1 card-subtitle">
        <div style="padding-top: .1rem;" id="authorName">STILLWATER</div>
        <div><%= article.createdAt.toLocaleDateString() %></div>
      </div>
    </div> 
    <div>
      <%- article.sanitizedHtml %>
    </div>
    <a href="/" class="btn btn-secondary">All Articles</a>
