<div class="container">
    <div class="row">
        <div class="col-10">
            <h2 class="mb-4 mt-4">Weekly Trending Stock</h2>
        </div>
        <div class="col-2">
            <a href="/weeklyTrendingStocks/register" class="mb-4 mt-4 btn btn-primary float-right submit"><i class=" fa fa-plus"></i></a>
        </div>
    </div>
    <table class="table table-hover mt-2">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Ticker</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% stocks.forEach(stock => { %>
                <tr>
                    <th><%= stock.name %></th>
                    <th><%= stock.ticker %></th>
                    <th>$<%= stock.price %></th>
                    <th>
                        <a href="/weeklyTrendingStocks/manage/<%= stock._id %>/edit" class="btn btn-sm btn-primary"> <i class=" fa fa-pencil"></i> </a>
                    </th>
                </tr>
            <% }) %>
            </tbody>
    </table>
</div>  